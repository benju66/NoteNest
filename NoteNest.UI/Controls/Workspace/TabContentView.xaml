<UserControl x:Class="NoteNest.UI.Controls.Workspace.TabContentView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:rtf="clr-namespace:NoteNest.UI.Controls.Editor.RTF">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/> <!-- Toolbar -->
            <RowDefinition Height="*"/>    <!-- Editor -->
        </Grid.RowDefinitions>
        
        <!-- RTF Toolbar -->
        <rtf:RTFToolbar x:Name="Toolbar" Grid.Row="0"/>
        
        <!-- RTF Editor -->
        <rtf:RTFEditor x:Name="Editor" Grid.Row="1"/>
    </Grid>
</UserControl>

