<UserControl x:Class="NoteNest.UI.Controls.Workspace.WorkspacePaneContainer"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:workspace="clr-namespace:NoteNest.UI.Controls.Workspace">
    <Grid x:Name="ContainerGrid">
        <!-- 
        Layout is dynamically configured in code-behind based on pane count:
        - 1 pane: Single PaneView fills the grid
        - 2 panes: Two PaneViews side-by-side with GridSplitter
        -->
    </Grid>
</UserControl>

