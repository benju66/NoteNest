<UserControl x:Class="NoteNest.UI.Controls.SplitPaneView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:ui="http://schemas.modernwpf.com/2019"
             xmlns:local="clr-namespace:NoteNest.UI.Controls"
             xmlns:behaviors="clr-namespace:NoteNest.UI.Behaviors"
             mc:Ignorable="d">
    <Border x:Name="PaneBorder" 
            BorderThickness="2" 
            BorderBrush="Transparent">
        <Grid>
            <local:DraggableTabControl x:Name="PaneTabControl"
                        behaviors:TabOverflowBehavior.EnableOverflow="True"
                        SelectionChanged="TabControl_SelectionChanged"
                        GotFocus="TabControl_GotFocus">
                <local:DraggableTabControl.Resources>
                    <!-- Neutralize global TabItem Style to ensure ItemTemplate is used here -->
                    <Style TargetType="TabItem"/>
                </local:DraggableTabControl.Resources>
                <local:DraggableTabControl.ItemTemplate>
                    <DataTemplate>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Margin="5,2" VerticalAlignment="Center" Text="{Binding Title}"/>
                            <TextBlock Text="·" Margin="2,2,0,2" Foreground="Black" VerticalAlignment="Center">
                                <TextBlock.Style>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="Visibility" Value="Collapsed"/>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding IsDirty}" Value="True">
                                                <Setter Property="Visibility" Value="Visible"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </TextBlock.Style>
                            </TextBlock>
                            <Button Content="×" 
                                    Click="CloseTab_Click"
                                    Tag="{Binding}"
                                    Background="Transparent"
                                    BorderThickness="0"
                                    Padding="5,0"
                                    Margin="3,0,0,0"
                                    FontSize="14"
                                    FontWeight="Bold"
                                    Foreground="Gray"
                                    Cursor="Hand"/>
                        </StackPanel>
                    </DataTemplate>
                </local:DraggableTabControl.ItemTemplate>
                <local:DraggableTabControl.ContentTemplate>
                    <DataTemplate>
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>

                            <!-- Per-tab toolbar -->
                            <ui:CommandBar Grid.Row="0" DefaultLabelPosition="Right" Focusable="False">
                                <ui:AppBarButton Icon="ViewAll"
                                                 Label="Split V"
                                                 ToolTip="Split Vertical (Ctrl+\)"
                                                 Command="{x:Static local:SplitWorkspace.SplitVerticalCommand}"
                                                 CommandTarget="{Binding RelativeSource={RelativeSource AncestorType={x:Type local:SplitWorkspace}}}"/>
                                <ui:AppBarSeparator/>
                                <ui:AppBarButton Icon="Bold"
                                                 Label="Bold"
                                                 Command="{x:Static EditingCommands.ToggleBold}"
                                                 CommandTarget="{Binding ElementName=FormattedEditor}"/>
                                <ui:AppBarButton Icon="Italic"
                                                 Label="Italic"
                                                 Command="{x:Static EditingCommands.ToggleItalic}"
                                                 CommandTarget="{Binding ElementName=FormattedEditor}"/>
                                <ui:AppBarSeparator/>
                                <ui:AppBarButton Icon="List"
                                                 Label="Bullets"
                                                 Command="{x:Static EditingCommands.ToggleBullets}"
                                                 CommandTarget="{Binding ElementName=FormattedEditor}"
                                                 Click="Toolbar_BulletList_Click"/>
                                <ui:AppBarButton Label="Numbers"
                                                 Command="{x:Static EditingCommands.ToggleNumbering}"
                                                 CommandTarget="{Binding ElementName=FormattedEditor}"
                                                 Click="Toolbar_NumberedList_Click">
                                    <ui:AppBarButton.Icon>
                                        <ui:FontIcon Glyph="&#xE8BE;"/>
                                    </ui:AppBarButton.Icon>
                                </ui:AppBarButton>
                                <ui:AppBarButton Label="Tasks" Click="Toolbar_TaskList_Click">
                                    <ui:AppBarButton.Icon>
                                        <ui:FontIcon Glyph="&#xE9D5;"/>
                                    </ui:AppBarButton.Icon>
                                </ui:AppBarButton>
                            </ui:CommandBar>

                            <!-- Note content viewer: always-formatted editor -->
                            <local:FormattedTextEditor x:Name="FormattedEditor"
                                                      Grid.Row="1"
                                                      VerticalScrollBarVisibility="Auto"
                                                      HorizontalScrollBarVisibility="Disabled"
                                                      Focusable="True"
                                                      IsDocumentEnabled="True"
                                                      IsHitTestVisible="True"
                                                      Background="Transparent"
                                                      MarkdownContent="{Binding Content, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                                      TextChanged="SmartEditor_TextChanged"/>
                        </Grid>
                    </DataTemplate>
                </local:DraggableTabControl.ContentTemplate>
            </local:DraggableTabControl>
            
            <!-- Show message when no tabs -->
            <TextBlock x:Name="EmptyMessage"
                       Text="No tabs open"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"
                       Foreground="Gray"
                       FontStyle="Italic"
                       Visibility="Collapsed"/>
        </Grid>
    </Border>
</UserControl>


