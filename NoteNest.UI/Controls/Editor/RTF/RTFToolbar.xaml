<UserControl x:Class="NoteNest.UI.Controls.Editor.RTF.RTFToolbar"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d">
    
    <UserControl.Resources>
        <!-- Modern toolbar button style with Segoe MDL2 Assets -->
        <Style x:Key="ModernToolbarButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="8,4"/>
            <Setter Property="Margin" Value="1"/>
            <Setter Property="MinWidth" Value="60"/>
            <Setter Property="MinHeight" Value="32"/>
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="2">
                            <ContentPresenter Margin="{TemplateBinding Padding}"
                                            HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                            VerticalAlignment="{TemplateBinding VerticalContentAlignment}"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="{DynamicResource AppSurfaceHighlightBrush}"/>
                                <Setter Property="BorderBrush" Value="{DynamicResource AppBorderBrush}"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="{DynamicResource AppSurfacePressedBrush}"/>
                                <Setter Property="BorderBrush" Value="{DynamicResource AppAccentBrush}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        
        <!-- Modern toggle button style -->
        <Style x:Key="ModernToggleButtonStyle" TargetType="ToggleButton">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="8,4"/>
            <Setter Property="Margin" Value="1"/>
            <Setter Property="MinWidth" Value="60"/>
            <Setter Property="MinHeight" Value="32"/>
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ToggleButton">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="2">
                            <ContentPresenter Margin="{TemplateBinding Padding}"
                                            HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                            VerticalAlignment="{TemplateBinding VerticalContentAlignment}"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="{DynamicResource AppSurfaceHighlightBrush}"/>
                                <Setter Property="BorderBrush" Value="{DynamicResource AppBorderBrush}"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="{DynamicResource AppSurfacePressedBrush}"/>
                                <Setter Property="BorderBrush" Value="{DynamicResource AppAccentBrush}"/>
                            </Trigger>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter Property="Background" Value="{DynamicResource AppAccentBrush}"/>
                                <Setter Property="BorderBrush" Value="{DynamicResource AppAccentBrush}"/>
                                <Setter Property="Foreground" Value="{DynamicResource AppTextOnAccentBrush}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>
    
    <!-- Professional toolbar with clean, flat design -->
    <Border Background="{DynamicResource AppSurfaceBrush}"
            BorderBrush="{DynamicResource AppBorderBrush}"
            BorderThickness="0,0,0,1"
            Padding="8,4">
        
        <StackPanel Orientation="Horizontal">
            
            <!-- Split View Group -->
            <Button Name="SplitVerticalButton"
                    Style="{StaticResource ModernToolbarButtonStyle}"
                    ToolTip="Split View Vertically (Ctrl+\)"
                    Click="SplitVerticalButton_Click">
                <StackPanel Orientation="Horizontal">
                    <TextBlock FontFamily="Segoe MDL2 Assets" 
                               Text="&#xE784;" 
                               FontSize="16"
                               VerticalAlignment="Center"
                               Foreground="{DynamicResource AppTextPrimaryBrush}"/>
                    <TextBlock Text="Split" 
                               Margin="6,0,0,0" 
                               VerticalAlignment="Center"
                               Foreground="{DynamicResource AppTextPrimaryBrush}"/>
                </StackPanel>
            </Button>
            
            <Separator Margin="6,0" Background="{DynamicResource AppBorderBrush}"/>
            
            <!-- Text Formatting Group -->
            <ToggleButton Name="BoldButton"
                          Style="{StaticResource ModernToggleButtonStyle}"
                          ToolTip="Bold (Ctrl+B)"
                          Click="BoldButton_Click">
                <StackPanel Orientation="Horizontal">
                    <TextBlock FontFamily="Segoe MDL2 Assets" 
                               Text="&#xE8DD;" 
                               FontSize="16"
                               VerticalAlignment="Center"
                               Foreground="{DynamicResource AppTextPrimaryBrush}"/>
                    <TextBlock Text="Bold" 
                               Margin="6,0,0,0" 
                               VerticalAlignment="Center"
                               Foreground="{DynamicResource AppTextPrimaryBrush}"/>
                </StackPanel>
            </ToggleButton>
            
            <ToggleButton Name="ItalicButton"
                          Style="{StaticResource ModernToggleButtonStyle}"
                          ToolTip="Italic (Ctrl+I)"
                          Click="ItalicButton_Click">
                <StackPanel Orientation="Horizontal">
                    <TextBlock FontFamily="Segoe MDL2 Assets" 
                               Text="&#xE8DB;" 
                               FontSize="16"
                               VerticalAlignment="Center"
                               Foreground="{DynamicResource AppTextPrimaryBrush}"/>
                    <TextBlock Text="Italic" 
                               Margin="6,0,0,0" 
                               VerticalAlignment="Center"
                               Foreground="{DynamicResource AppTextPrimaryBrush}"/>
                </StackPanel>
            </ToggleButton>
            
            <ToggleButton Name="UnderlineButton"
                          Style="{StaticResource ModernToggleButtonStyle}"
                          ToolTip="Underline (Ctrl+U)"
                          Click="UnderlineButton_Click">
                <StackPanel Orientation="Horizontal">
                    <TextBlock FontFamily="Segoe MDL2 Assets" 
                               Text="&#xE8DC;" 
                               FontSize="16"
                               VerticalAlignment="Center"
                               Foreground="{DynamicResource AppTextPrimaryBrush}"/>
                    <TextBlock Text="Underline" 
                               Margin="6,0,0,0" 
                               VerticalAlignment="Center"
                               Foreground="{DynamicResource AppTextPrimaryBrush}"/>
                </StackPanel>
            </ToggleButton>
            
            <Separator Margin="6,0" Background="{DynamicResource AppBorderBrush}"/>
            
            <!-- Highlight Group -->
            <Button Name="HighlightButton"
                    Style="{StaticResource ModernToolbarButtonStyle}"
                    ToolTip="Cycle Highlight (Ctrl+H)"
                    Click="HighlightButton_Click">
                <StackPanel Orientation="Horizontal">
                    <Border Background="{Binding HighlightColor, RelativeSource={RelativeSource AncestorType=UserControl}}" 
                            Width="16" Height="16" 
                            CornerRadius="2"
                            BorderBrush="{DynamicResource SystemControlForegroundBaseHighBrush}"
                            BorderThickness="1"
                            VerticalAlignment="Center">
                        <TextBlock FontFamily="Segoe MDL2 Assets" 
                                   Text="&#xE7E6;" 
                                   FontSize="10"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Center"
                                   Foreground="{DynamicResource AppTextPrimaryBrush}"/>
                    </Border>
                    <TextBlock Text="Highlight" 
                               Margin="6,0,0,0" 
                               VerticalAlignment="Center"
                               Foreground="{DynamicResource AppTextPrimaryBrush}"/>
                </StackPanel>
            </Button>
            
            <Separator Margin="6,0" Background="{DynamicResource AppBorderBrush}"/>
            
            <!-- List Group -->
            <ToggleButton Name="BulletListButton"
                          Style="{StaticResource ModernToggleButtonStyle}"
                          ToolTip="Bullet List (Ctrl+.)"
                          Click="BulletListButton_Click">
                <StackPanel Orientation="Horizontal">
                    <TextBlock FontFamily="Segoe MDL2 Assets" 
                               Text="&#xE8FD;" 
                               FontSize="16"
                               VerticalAlignment="Center"
                               Foreground="{DynamicResource AppTextPrimaryBrush}"/>
                    <TextBlock Text="Bullets" 
                               Margin="6,0,0,0" 
                               VerticalAlignment="Center"
                               Foreground="{DynamicResource AppTextPrimaryBrush}"/>
                </StackPanel>
            </ToggleButton>
            
            <ToggleButton Name="NumberedListButton"
                          Style="{StaticResource ModernToggleButtonStyle}"
                          ToolTip="Numbered List"
                          Click="NumberedListButton_Click">
                <StackPanel Orientation="Horizontal">
                    <TextBlock FontFamily="Segoe MDL2 Assets" 
                               Text="&#xE8BE;" 
                               FontSize="16"
                               VerticalAlignment="Center"
                               Foreground="{DynamicResource AppTextPrimaryBrush}"/>
                    <TextBlock Text="Numbers" 
                               Margin="6,0,0,0" 
                               VerticalAlignment="Center"
                               Foreground="{DynamicResource AppTextPrimaryBrush}"/>
                </StackPanel>
            </ToggleButton>
            
            <Separator Margin="6,0" Background="{DynamicResource AppBorderBrush}"/>
            
            <!-- Indent Group -->
            <Button Name="IndentButton"
                    Style="{StaticResource ModernToolbarButtonStyle}"
                    ToolTip="Increase Indent"
                    Click="IndentButton_Click">
                <StackPanel Orientation="Horizontal">
                    <TextBlock FontFamily="Segoe MDL2 Assets" 
                               Text="&#xE291;" 
                               FontSize="16"
                               VerticalAlignment="Center"
                               Foreground="{DynamicResource AppTextPrimaryBrush}"/>
                    <TextBlock Text="Indent" 
                               Margin="6,0,0,0" 
                               VerticalAlignment="Center"
                               Foreground="{DynamicResource AppTextPrimaryBrush}"/>
                </StackPanel>
            </Button>
            
            <Button Name="OutdentButton"
                    Style="{StaticResource ModernToolbarButtonStyle}"
                    ToolTip="Decrease Indent"
                    Click="OutdentButton_Click">
                <StackPanel Orientation="Horizontal">
                    <TextBlock FontFamily="Segoe MDL2 Assets" 
                               Text="&#xE290;" 
                               FontSize="16"
                               VerticalAlignment="Center"
                               Foreground="{DynamicResource AppTextPrimaryBrush}"/>
                    <TextBlock Text="Outdent" 
                               Margin="6,0,0,0" 
                               VerticalAlignment="Center"
                               Foreground="{DynamicResource AppTextPrimaryBrush}"/>
                </StackPanel>
            </Button>
            
        </StackPanel>
    </Border>
    
</UserControl>
