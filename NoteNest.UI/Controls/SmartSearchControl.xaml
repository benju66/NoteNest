<UserControl x:Class="NoteNest.UI.Controls.SmartSearchControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:ui="http://schemas.modernwpf.com/2019"
             xmlns:vm="clr-namespace:NoteNest.UI.ViewModels"
             xmlns:services="clr-namespace:NoteNest.UI.Services"
             x:Name="SearchControlRoot">
    
    <UserControl.Resources>
        <!-- Converter for boolean to visibility -->
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
        
        <!-- Search result template -->
        <DataTemplate x:Key="SearchResultTemplate" DataType="{x:Type services:SearchResultViewModel}">
            <Border Background="Transparent" 
                    Padding="8,4"
                    Cursor="Hand">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    
                    <!-- Result type icon -->
                    <TextBlock Grid.Column="0" 
                              Text="{Binding ResultIcon}" 
                              FontSize="14"
                              VerticalAlignment="Center"
                              Margin="0,0,8,0"/>
                    
                    <!-- Title and preview -->
                    <StackPanel Grid.Column="1" VerticalAlignment="Center">
                        <TextBlock Text="{Binding DisplayTitle}" 
                                  FontWeight="SemiBold" 
                                  FontSize="13"
                                  TextTrimming="CharacterEllipsis"/>
                        <TextBlock Text="{Binding DisplayPreview}" 
                                  FontSize="11" 
                                  Foreground="{DynamicResource SystemControlForegroundBaseMediumBrush}"
                                  TextTrimming="CharacterEllipsis"
                                  MaxHeight="32"/>
                    </StackPanel>
                </Grid>
            </Border>
        </DataTemplate>
    </UserControl.Resources>
    
    <!-- Single AutoSuggestBox with results as suggestions dropdown -->
    <ui:AutoSuggestBox x:Name="SearchBox"
                      Text="{Binding SearchQuery, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"
                      PlaceholderText="Search notes... (Ctrl+F)"
                      QueryIcon="Find"
                      IsTabStop="True"
                      HorizontalAlignment="Stretch"
                      MaxSuggestionListHeight="400"
                      ItemsSource="{Binding SearchResults}"
                      IsSuggestionListOpen="{Binding ShowDropdown, Mode=TwoWay}"
                      QuerySubmitted="OnQuerySubmitted"
                      SuggestionChosen="OnSuggestionChosen"
                      TextChanged="OnTextChanged"
                      PreviewKeyDown="OnPreviewKeyDown"
                      UpdateTextOnSelect="False">
                      
        <!-- Rich result template -->
        <ui:AutoSuggestBox.ItemTemplate>
            <DataTemplate DataType="{x:Type services:SearchResultViewModel}">
                <Border Background="Transparent" 
                        BorderBrush="Transparent"
                        BorderThickness="0">
                    <Border.Style>
                        <Style TargetType="Border">
                            <Style.Triggers>
                                <!-- Highlight selected item -->
                                <DataTrigger Binding="{Binding IsSelected, RelativeSource={RelativeSource AncestorType=ListBoxItem}}" Value="True">
                                    <Setter Property="Background" Value="{DynamicResource SystemControlHighlightListAccentLowBrush}"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </Border.Style>
                    
                    <Grid Margin="8,6">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        
                        <!-- Icon -->
                        <TextBlock Grid.Column="0" 
                                  Text="{Binding ResultIcon}" 
                                  FontSize="16"
                                  VerticalAlignment="Center"
                                  Margin="0,0,12,0"/>
                        
                        <!-- Title and preview -->
                        <StackPanel Grid.Column="1" VerticalAlignment="Center">
                            <TextBlock Text="{Binding DisplayTitle}" 
                                      FontWeight="SemiBold" 
                                      FontSize="14"
                                      TextTrimming="CharacterEllipsis"/>
                            <TextBlock Text="{Binding DisplayPreview}" 
                                      FontSize="12" 
                                      Opacity="0.7"
                                      TextTrimming="CharacterEllipsis"
                                      MaxWidth="350"/>
                        </StackPanel>
                        
                        <!-- Keyboard hint -->
                        <TextBlock Grid.Column="2"
                                  Text="Enter â†µ"
                                  FontSize="10"
                                  Opacity="0.5"
                                  VerticalAlignment="Center"
                                  Margin="8,0,0,0"
                                  Visibility="{Binding IsSelected, RelativeSource={RelativeSource AncestorType=ListBoxItem}, 
                                              Converter={StaticResource BooleanToVisibilityConverter}}"/>
                    </Grid>
                </Border>
            </DataTemplate>
        </ui:AutoSuggestBox.ItemTemplate>
    </ui:AutoSuggestBox>
</UserControl>