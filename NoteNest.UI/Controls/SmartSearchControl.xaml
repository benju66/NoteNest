<UserControl x:Class="NoteNest.UI.Controls.SmartSearchControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:ui="http://schemas.modernwpf.com/2019"
             xmlns:vm="clr-namespace:NoteNest.UI.ViewModels"
             xmlns:services="clr-namespace:NoteNest.UI.Services"
             x:Name="SearchControlRoot">
    
    <UserControl.Resources>
        <!-- Converter for boolean to visibility -->
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
        
        <!-- Search result template -->
        <DataTemplate x:Key="SearchResultTemplate" DataType="{x:Type services:SearchResultViewModel}">
            <Border Background="Transparent" 
                    Padding="8,4"
                    Cursor="Hand">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    
                    <!-- Result type icon -->
                    <TextBlock Grid.Column="0" 
                              Text="{Binding ResultIcon}" 
                              FontSize="14"
                              VerticalAlignment="Center"
                              Margin="0,0,8,0"/>
                    
                    <!-- Title and preview -->
                    <StackPanel Grid.Column="1" VerticalAlignment="Center">
                        <TextBlock Text="{Binding DisplayTitle}" 
                                  FontWeight="SemiBold" 
                                  FontSize="13"
                                  TextTrimming="CharacterEllipsis"/>
                        <TextBlock Text="{Binding DisplayPreview}" 
                                  FontSize="11" 
                                  Foreground="{DynamicResource SystemControlForegroundBaseMediumBrush}"
                                  TextTrimming="CharacterEllipsis"
                                  MaxHeight="32"/>
                    </StackPanel>
                </Grid>
            </Border>
        </DataTemplate>
    </UserControl.Resources>
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <!-- Search input with ModernWpf AutoSuggestBox -->
        <ui:AutoSuggestBox x:Name="SearchBox"
                          Grid.Row="0"
                          Text="{Binding SearchQuery, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"
                          PlaceholderText="Search notes and content..."
                          QueryIcon="Find"
                          IsTabStop="True"
                          MinWidth="300"
                          MaxSuggestionListHeight="200"
                          ItemsSource="{Binding Suggestions}"
                          QuerySubmitted="OnQuerySubmitted"
                          SuggestionChosen="OnSuggestionChosen"
                          TextChanged="OnTextChanged">
                          
            <!-- Custom suggestion item template -->
            <ui:AutoSuggestBox.ItemTemplate>
                <DataTemplate>
                    <StackPanel Orientation="Horizontal" Margin="4,2">
                        <TextBlock Text="🔍" FontSize="12" VerticalAlignment="Center" Margin="0,0,6,0"/>
                        <TextBlock Text="{Binding}" FontSize="13" VerticalAlignment="Center"/>
                    </StackPanel>
                </DataTemplate>
            </ui:AutoSuggestBox.ItemTemplate>
        </ui:AutoSuggestBox>
        
        <!-- Status text and loading indicator -->
        <StackPanel Grid.Row="1" 
                   Orientation="Horizontal" 
                   Margin="0,4,0,0"
                   Visibility="{Binding IsSearching, Converter={StaticResource BooleanToVisibilityConverter}}">
            <ui:ProgressRing Width="16" Height="16" 
                           IsActive="{Binding IsSearching}" 
                           VerticalAlignment="Center"
                           Margin="0,0,6,0"/>
            <TextBlock Text="{Binding StatusText}" 
                      FontSize="12" 
                      Foreground="{DynamicResource SystemControlForegroundBaseMediumBrush}"
                      VerticalAlignment="Center"/>
        </StackPanel>
        
        <!-- Search results list -->
        <ScrollViewer Grid.Row="2" 
                     VerticalScrollBarVisibility="Auto"
                     HorizontalScrollBarVisibility="Disabled"
                     Margin="0,8,0,0"
                     Visibility="{Binding HasResults, Converter={StaticResource BooleanToVisibilityConverter}}">
            
            <ItemsControl ItemsSource="{Binding SearchResults}"
                         ItemTemplate="{StaticResource SearchResultTemplate}">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <StackPanel/>
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
                
                <!-- Add click handling via behavior -->
                <ItemsControl.ItemContainerStyle>
                    <Style TargetType="ContentPresenter">
                        <EventSetter Event="MouseLeftButtonUp" Handler="OnResultClicked"/>
                    </Style>
                </ItemsControl.ItemContainerStyle>
            </ItemsControl>
        </ScrollViewer>
        
        <!-- No results message -->
        <TextBlock Grid.Row="2"
                  Text="No results found. Try different search terms."
                  FontSize="13"
                  Foreground="{DynamicResource SystemControlForegroundBaseMediumBrush}"
                  HorizontalAlignment="Center"
                  VerticalAlignment="Top"
                  Margin="0,20,0,0"
                  Visibility="{Binding ShowNoResults, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                  
    </Grid>
</UserControl>