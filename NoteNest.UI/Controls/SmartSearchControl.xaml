<UserControl x:Class="NoteNest.UI.Controls.SmartSearchControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:ui="http://schemas.modernwpf.com/2019"
             xmlns:vm="clr-namespace:NoteNest.UI.ViewModels"
             xmlns:services="clr-namespace:NoteNest.UI.Services"
             x:Name="SearchControlRoot">
    
    <UserControl.Resources>
        <!-- Converter for boolean to visibility -->
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
        
        <!-- Search result template -->
        <DataTemplate x:Key="SearchResultTemplate" DataType="{x:Type services:SearchResultViewModel}">
            <Border Background="Transparent" 
                    Padding="8,4"
                    Cursor="Hand">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    
                    <!-- Result type icon -->
                    <TextBlock Grid.Column="0" 
                              Text="{Binding ResultIcon}" 
                              FontSize="14"
                              VerticalAlignment="Center"
                              Margin="0,0,8,0"/>
                    
                    <!-- Title and preview -->
                    <StackPanel Grid.Column="1" VerticalAlignment="Center">
                        <TextBlock Text="{Binding DisplayTitle}" 
                                  FontWeight="SemiBold" 
                                  FontSize="13"
                                  TextTrimming="CharacterEllipsis"/>
                        <TextBlock Text="{Binding DisplayPreview}" 
                                  FontSize="11" 
                                  Foreground="{DynamicResource SystemControlForegroundBaseMediumBrush}"
                                  TextTrimming="CharacterEllipsis"
                                  MaxHeight="32"/>
                    </StackPanel>
                </Grid>
            </Border>
        </DataTemplate>
    </UserControl.Resources>
    
    <!-- Single AutoSuggestBox with results as suggestions dropdown -->
    <ui:AutoSuggestBox x:Name="SearchBox"
                      Text="{Binding SearchQuery, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"
                      PlaceholderText="Search notes and content..."
                      QueryIcon="Find"
                      IsTabStop="True"
                      HorizontalAlignment="Stretch"
                      MaxSuggestionListHeight="400"
                      ItemsSource="{Binding SearchResults}"
                      QuerySubmitted="OnQuerySubmitted"
                      SuggestionChosen="OnSuggestionChosen"
                      TextChanged="OnTextChanged">
                      
        <!-- Rich search result template for dropdown -->
        <ui:AutoSuggestBox.ItemTemplate>
            <DataTemplate DataType="{x:Type services:SearchResultViewModel}">
                <Grid Margin="8,4">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    
                    <!-- Result type icon -->
                    <TextBlock Grid.Column="0" 
                              Text="{Binding ResultIcon}" 
                              FontSize="16"
                              VerticalAlignment="Center"
                              Margin="0,0,12,0"/>
                    
                    <!-- Title and preview -->
                    <StackPanel Grid.Column="1">
                        <TextBlock Text="{Binding DisplayTitle}" 
                                  FontWeight="SemiBold" 
                                  FontSize="14"
                                  TextTrimming="CharacterEllipsis"/>
                        <TextBlock Text="{Binding DisplayPreview}" 
                                  FontSize="12" 
                                  Foreground="{DynamicResource SystemControlForegroundBaseMediumBrush}"
                                  TextTrimming="CharacterEllipsis"
                                  MaxWidth="300"
                                  TextWrapping="NoWrap"/>
                    </StackPanel>
                </Grid>
            </DataTemplate>
        </ui:AutoSuggestBox.ItemTemplate>
    </ui:AutoSuggestBox>
</UserControl>