<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:system="clr-namespace:System;assembly=mscorlib">

    <!-- Icon Font Characters (Segoe MDL2 Assets) -->
    <system:String x:Key="IconFolderClosed">&#xE8B7;</system:String>
    <system:String x:Key="IconFolderOpen">&#xE838;</system:String>
    <system:String x:Key="IconFolderPinned">&#xE840;</system:String>
    <system:String x:Key="IconMarkdown">&#xE943;</system:String>
    <system:String x:Key="IconTextFile">&#xE8A4;</system:String>
    <system:String x:Key="IconGenericFile">&#xE7C3;</system:String>
    <system:String x:Key="IconNewFile">&#xE82D;</system:String>
    <system:String x:Key="IconNewFolder">&#xE8F4;</system:String>
    <system:String x:Key="IconDelete">&#xE74D;</system:String>
    <system:String x:Key="IconRename">&#xE8AC;</system:String>
    <system:String x:Key="IconPin">&#xE718;</system:String>
    <system:String x:Key="IconExpand">&#xE76C;</system:String>

    <!-- Colors -->
    <Color x:Key="FolderIconColor">#C09553</Color>
    <Color x:Key="FolderOpenIconColor">#DCB67A</Color>
    <Color x:Key="FolderPinnedIconColor">#FFB900</Color>
    <Color x:Key="MarkdownIconColor">#519ABA</Color>
    <Color x:Key="TextFileIconColor">#66BB6A</Color>
    <Color x:Key="GenericFileIconColor">#9E9E9E</Color>
    <Color x:Key="UnsavedIndicatorColor">#F44336</Color>

    <!-- Brushes -->
    <SolidColorBrush x:Key="FolderIconBrush" Color="{StaticResource FolderIconColor}"/>
    <SolidColorBrush x:Key="FolderOpenIconBrush" Color="{StaticResource FolderOpenIconColor}"/>
    <SolidColorBrush x:Key="FolderPinnedIconBrush" Color="{StaticResource FolderPinnedIconColor}"/>
    <SolidColorBrush x:Key="MarkdownIconBrush" Color="{StaticResource MarkdownIconColor}"/>
    <SolidColorBrush x:Key="TextFileIconBrush" Color="{StaticResource TextFileIconColor}"/>
    <SolidColorBrush x:Key="GenericFileIconBrush" Color="{StaticResource GenericFileIconColor}"/>
    <SolidColorBrush x:Key="NoteIconBrush" Color="#519ABA"/>
    <SolidColorBrush x:Key="UnsavedIndicatorBrush" Color="{StaticResource UnsavedIndicatorColor}"/>

    <!-- Drag/Drop visuals -->
    <SolidColorBrush x:Key="DragInsertBrush" Color="#0078D4"/>
    <SolidColorBrush x:Key="DragRowHighlightBrush" Color="#220078D4"/>

</ResourceDictionary>


