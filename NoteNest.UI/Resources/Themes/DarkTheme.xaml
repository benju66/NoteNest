<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    
    <!-- 
    ═══════════════════════════════════════════════════════════════
    DARK THEME - Standard Dark Mode
    ═══════════════════════════════════════════════════════════════
    Clean, professional dark theme similar to VS Code Dark+
    ═══════════════════════════════════════════════════════════════
    -->
    
    <!-- Merge base theme structure -->
    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="ThemeBase.xaml"/>
    </ResourceDictionary.MergedDictionaries>
    
    <!-- PRIMARY COLORS -->
    <Color x:Key="AppBackground">#FF1E1E1E</Color>
    <Color x:Key="AppSurface">#FF2D2D30</Color>
    <Color x:Key="AppSurfaceHighlight">#FF3E3E42</Color>
    <Color x:Key="AppSurfacePressed">#FF4E4E52</Color>
    
    <!-- ACCENT -->
    <Color x:Key="AppAccent">#FF3794FF</Color>
    <Color x:Key="AppAccentLight">#FF5AA5FF</Color>
    <Color x:Key="AppAccentDark">#FF1A73E8</Color>
    
    <!-- TEXT -->
    <Color x:Key="AppTextPrimary">#FFF3F3F3</Color>
    <Color x:Key="AppTextSecondary">#FFAAAAAA</Color>
    <Color x:Key="AppTextDisabled">#FF777777</Color>
    <Color x:Key="AppTextOnAccent">#FFFFFFFF</Color>
    
    <!-- BORDERS -->
    <Color x:Key="AppBorder">#FF3F3F46</Color>
    <Color x:Key="AppBorderHover">#FF555555</Color>
    <Color x:Key="AppDivider">#FF2D2D30</Color>
    
    <!-- STATUS -->
    <Color x:Key="AppSuccess">#FF4CAF50</Color>
    <Color x:Key="AppWarning">#FFFFC107</Color>
    <Color x:Key="AppError">#FFF44336</Color>
    <Color x:Key="AppInfo">#FF29B6F6</Color>
    
    <!-- EDITOR -->
    <Color x:Key="AppEditorBackground">#FF1E1E1E</Color>
    <Color x:Key="AppEditorSelection">#403794FF</Color>
    <Color x:Key="AppEditorCaret">#FFFFFFFF</Color>
    
</ResourceDictionary>
