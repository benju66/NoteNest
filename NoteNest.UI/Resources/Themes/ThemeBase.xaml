<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    
    <!-- 
    ═══════════════════════════════════════════════════════════════
    THEME BASE - Core Color Tokens
    ═══════════════════════════════════════════════════════════════
    All themes define these colors, then brushes reference them
    This creates a semantic theming system where we change colors
    and all UI elements update automatically via DynamicResource
    ═══════════════════════════════════════════════════════════════
    -->
    
    <!-- PRIMARY COLORS - Defined per theme -->
    <Color x:Key="AppBackground">#FFFFFF</Color>           <!-- Main window background -->
    <Color x:Key="AppSurface">#F7F7F7</Color>              <!-- Panels, cards, elevated surfaces -->
    <Color x:Key="AppSurfaceHighlight">#F0F0F0</Color>     <!-- Hover states -->
    <Color x:Key="AppSurfacePressed">#E0E0E0</Color>       <!-- Pressed/active states -->
    
    <!-- ACCENT & INTERACTIVE -->
    <Color x:Key="AppAccent">#0078D4</Color>               <!-- Primary brand color, buttons -->
    <Color x:Key="AppAccentLight">#409EFF</Color>          <!-- Lighter accent for highlights -->
    <Color x:Key="AppAccentDark">#005A9E</Color>           <!-- Darker accent for pressed -->
    
    <!-- TEXT -->
    <Color x:Key="AppTextPrimary">#1E1E1E</Color>          <!-- Main text -->
    <Color x:Key="AppTextSecondary">#666666</Color>        <!-- Secondary text, hints -->
    <Color x:Key="AppTextDisabled">#999999</Color>         <!-- Disabled text -->
    <Color x:Key="AppTextOnAccent">#FFFFFF</Color>         <!-- Text on accent backgrounds -->
    
    <!-- BORDERS & DIVIDERS -->
    <Color x:Key="AppBorder">#D0D0D0</Color>               <!-- Default borders -->
    <Color x:Key="AppBorderHover">#B0B0B0</Color>          <!-- Border on hover -->
    <Color x:Key="AppDivider">#E0E0E0</Color>              <!-- Subtle dividers -->
    
    <!-- STATUS COLORS -->
    <Color x:Key="AppSuccess">#28A745</Color>              <!-- Success green -->
    <Color x:Key="AppWarning">#FFC107</Color>              <!-- Warning yellow -->
    <Color x:Key="AppError">#DC3545</Color>                <!-- Error red -->
    <Color x:Key="AppInfo">#17A2B8</Color>                 <!-- Info blue -->
    
    <!-- EDITOR SPECIFIC -->
    <Color x:Key="AppEditorBackground">#FFFFFF</Color>     <!-- Note editor background -->
    <Color x:Key="AppEditorSelection">#0078D440</Color>    <!-- Text selection -->
    <Color x:Key="AppEditorCaret">#000000</Color>          <!-- Cursor color -->
    
    <!-- SEMANTIC BRUSHES - These reference the colors above -->
    <!-- All UI elements should use these brushes, NOT direct colors -->
    
    <!-- Backgrounds -->
    <SolidColorBrush x:Key="AppBackgroundBrush" Color="{DynamicResource AppBackground}"/>
    <SolidColorBrush x:Key="AppSurfaceBrush" Color="{DynamicResource AppSurface}"/>
    <SolidColorBrush x:Key="AppSurfaceHighlightBrush" Color="{DynamicResource AppSurfaceHighlight}"/>
    <SolidColorBrush x:Key="AppSurfacePressedBrush" Color="{DynamicResource AppSurfacePressed}"/>
    
    <!-- Accents -->
    <SolidColorBrush x:Key="AppAccentBrush" Color="{DynamicResource AppAccent}"/>
    <SolidColorBrush x:Key="AppAccentLightBrush" Color="{DynamicResource AppAccentLight}"/>
    <SolidColorBrush x:Key="AppAccentDarkBrush" Color="{DynamicResource AppAccentDark}"/>
    
    <!-- Text -->
    <SolidColorBrush x:Key="AppTextPrimaryBrush" Color="{DynamicResource AppTextPrimary}"/>
    <SolidColorBrush x:Key="AppTextSecondaryBrush" Color="{DynamicResource AppTextSecondary}"/>
    <SolidColorBrush x:Key="AppTextDisabledBrush" Color="{DynamicResource AppTextDisabled}"/>
    <SolidColorBrush x:Key="AppTextOnAccentBrush" Color="{DynamicResource AppTextOnAccent}"/>
    
    <!-- Borders -->
    <SolidColorBrush x:Key="AppBorderBrush" Color="{DynamicResource AppBorder}"/>
    <SolidColorBrush x:Key="AppBorderHoverBrush" Color="{DynamicResource AppBorderHover}"/>
    <SolidColorBrush x:Key="AppDividerBrush" Color="{DynamicResource AppDivider}"/>
    
    <!-- Status -->
    <SolidColorBrush x:Key="AppSuccessBrush" Color="{DynamicResource AppSuccess}"/>
    <SolidColorBrush x:Key="AppWarningBrush" Color="{DynamicResource AppWarning}"/>
    <SolidColorBrush x:Key="AppErrorBrush" Color="{DynamicResource AppError}"/>
    <SolidColorBrush x:Key="AppInfoBrush" Color="{DynamicResource AppInfo}"/>
    
    <!-- Editor -->
    <SolidColorBrush x:Key="AppEditorBackgroundBrush" Color="{DynamicResource AppEditorBackground}"/>
    <SolidColorBrush x:Key="AppEditorSelectionBrush" Color="{DynamicResource AppEditorSelection}"/>
    <SolidColorBrush x:Key="AppEditorCaretBrush" Color="{DynamicResource AppEditorCaret}"/>
    
</ResourceDictionary>
