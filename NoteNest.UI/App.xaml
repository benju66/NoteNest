<Application x:Class="NoteNest.UI.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:sys="clr-namespace:System;assembly=mscorlib">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <!-- Theme will be loaded dynamically by ThemeService -->
                <!-- Default to Light theme until ThemeService initializes -->
                <ResourceDictionary Source="Resources/Themes/LightTheme.xaml"/>
                
                <!-- Modern Thin Scrollbars - VS Code style -->
                <ResourceDictionary Source="Resources/ModernScrollBarStyle.xaml"/>
                
                <!-- Icons - Always loaded -->
                <ResourceDictionary Source="Resources/LucideIcons.xaml"/>
            </ResourceDictionary.MergedDictionaries>
            
            <!-- 
            ═══════════════════════════════════════════════════════════════
            SPACING SYSTEM - Consistent spacing throughout app
            ═══════════════════════════════════════════════════════════════
            Based on 4px baseline grid (industry standard)
            -->
            <sys:Double x:Key="SpacingXS">4</sys:Double>
            <sys:Double x:Key="SpacingS">8</sys:Double>
            <sys:Double x:Key="SpacingM">12</sys:Double>
            <sys:Double x:Key="SpacingL">16</sys:Double>
            <sys:Double x:Key="SpacingXL">24</sys:Double>
            <sys:Double x:Key="SpacingXXL">32</sys:Double>
            
            <!-- Corner Radius System -->
            <CornerRadius x:Key="CornerRadiusS">2</CornerRadius>
            <CornerRadius x:Key="CornerRadiusM">4</CornerRadius>
            <CornerRadius x:Key="CornerRadiusL">6</CornerRadius>
            
            <!-- 
            ═══════════════════════════════════════════════════════════════
            TYPOGRAPHY SYSTEM - Consistent text hierarchy
            ═══════════════════════════════════════════════════════════════
            -->
            
            <!-- Header Styles -->
            <Style x:Key="HeaderLarge" TargetType="TextBlock">
                <Setter Property="FontSize" Value="20"/>
                <Setter Property="FontWeight" Value="SemiBold"/>
                <Setter Property="Foreground" Value="{DynamicResource AppTextPrimaryBrush}"/>
                <Setter Property="Margin" Value="0,0,0,16"/>
            </Style>
            
            <Style x:Key="HeaderMedium" TargetType="TextBlock">
                <Setter Property="FontSize" Value="16"/>
                <Setter Property="FontWeight" Value="SemiBold"/>
                <Setter Property="Foreground" Value="{DynamicResource AppTextPrimaryBrush}"/>
                <Setter Property="Margin" Value="0,0,0,12"/>
            </Style>
            
            <Style x:Key="HeaderSmall" TargetType="TextBlock">
                <Setter Property="FontSize" Value="14"/>
                <Setter Property="FontWeight" Value="SemiBold"/>
                <Setter Property="Foreground" Value="{DynamicResource AppTextPrimaryBrush}"/>
                <Setter Property="Margin" Value="0,0,0,8"/>
            </Style>
            
            <!-- Section Label (uppercase) -->
            <Style x:Key="SectionLabel" TargetType="TextBlock">
                <Setter Property="FontSize" Value="11"/>
                <Setter Property="FontWeight" Value="SemiBold"/>
                <Setter Property="Foreground" Value="{DynamicResource AppTextSecondaryBrush}"/>
                <Setter Property="Margin" Value="0,0,0,4"/>
            </Style>
            
            <!-- Body Text -->
            <Style x:Key="BodyText" TargetType="TextBlock">
                <Setter Property="FontSize" Value="13"/>
                <Setter Property="Foreground" Value="{DynamicResource AppTextPrimaryBrush}"/>
                <Setter Property="TextWrapping" Value="Wrap"/>
                <Setter Property="LineHeight" Value="20"/>
            </Style>
            
            <!-- Caption Text (small, secondary) -->
            <Style x:Key="CaptionText" TargetType="TextBlock">
                <Setter Property="FontSize" Value="11"/>
                <Setter Property="Foreground" Value="{DynamicResource AppTextSecondaryBrush}"/>
            </Style>
            
            <!-- 
            ═══════════════════════════════════════════════════════════════
            FOCUS VISUAL STYLE - Enhanced accessibility
            ═══════════════════════════════════════════════════════════════
            -->
            <Style x:Key="EnhancedFocusVisualStyle">
                <Setter Property="Control.Template">
                    <Setter.Value>
                        <ControlTemplate>
                            <Rectangle Stroke="{DynamicResource AppAccentBrush}"
                                      StrokeThickness="2"
                                      StrokeDashArray="2,2"
                                      Margin="-2"
                                      RadiusX="4"
                                      RadiusY="4"
                                      SnapsToDevicePixels="True"/>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>
        </ResourceDictionary>
    </Application.Resources>
</Application>
