<UserControl x:Class="NoteNest.UI.Plugins.TodoPlugin.UI.Views.TodoPanelView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:NoteNest.UI.Plugins.TodoPlugin.UI.Views"
             xmlns:vm="clr-namespace:NoteNest.UI.Plugins.TodoPlugin.UI.ViewModels"
             xmlns:converters="clr-namespace:NoteNest.UI.Plugins.TodoPlugin.UI.Converters"
             xmlns:ui="http://schemas.modernwpf.com/2019"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="350">
    
    <UserControl.Resources>
        <!-- Converters -->
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
        <converters:InverseBooleanToVisibilityConverter x:Key="InverseBooleanToVisibilityConverter"/>
        <converters:BoolToStrikethroughConverter x:Key="BoolToStrikethroughConverter"/>
        <converters:BoolToErrorBrushConverter x:Key="BoolToErrorBrushConverter"/>
        <!-- Todo Item Template -->
        <DataTemplate x:Key="TodoItemTemplate" DataType="{x:Type vm:TodoItemViewModel}">
            <Border x:Name="TodoItemBorder"
                    Visibility="{Binding IsVisible, Converter={StaticResource BooleanToVisibilityConverter}}"
                    Background="Transparent"
                    BorderBrush="{DynamicResource SystemControlBackgroundBaseLowBrush}"
                    BorderThickness="0,0,0,1"
                    Padding="12,8">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    
                    <!-- Checkbox -->
                    <CheckBox Grid.Column="0"
                              IsChecked="{Binding IsCompleted}"
                              VerticalAlignment="Top"
                              Margin="0,2,8,0"/>
                    
                    <!-- Content -->
                    <StackPanel Grid.Column="1" VerticalAlignment="Center">
                        <!-- Editable Text -->
                        <Grid>
                            <TextBlock x:Name="TodoText"
                                       Text="{Binding Text}"
                                       TextWrapping="Wrap"
                                       TextDecorations="{Binding IsCompleted, Converter={StaticResource BoolToStrikethroughConverter}}"
                                       Visibility="{Binding IsEditing, Converter={StaticResource InverseBooleanToVisibilityConverter}}"/>
                            
                            <TextBox x:Name="EditTextBox"
                                     Text="{Binding EditingText, UpdateSourceTrigger=PropertyChanged}"
                                     TextWrapping="Wrap"
                                     Visibility="{Binding IsEditing, Converter={StaticResource BooleanToVisibilityConverter}}"
                                     KeyDown="EditTextBox_KeyDown"
                                     LostFocus="EditTextBox_LostFocus"/>
                        </Grid>
                        
                        <!-- Metadata -->
                        <StackPanel Orientation="Horizontal" Margin="0,2,0,0">
                            <!-- Due Date -->
                            <TextBlock Text="{Binding DueDateDisplay}"
                                       FontSize="11"
                                       Foreground="{Binding IsOverdue, Converter={StaticResource BoolToErrorBrushConverter}}"
                                       Margin="0,0,8,0">
                                <TextBlock.Style>
                                    <Style TargetType="TextBlock">
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding DueDateDisplay}" Value="">
                                                <Setter Property="Visibility" Value="Collapsed"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </TextBlock.Style>
                            </TextBlock>
                            
                            <!-- Tags -->
                            <TextBlock Text="{Binding TagsDisplay}"
                                       FontSize="11"
                                       Foreground="{DynamicResource SystemControlForegroundBaseMediumBrush}"
                                       FontStyle="Italic">
                                <TextBlock.Style>
                                    <Style TargetType="TextBlock">
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding TagsDisplay}" Value="">
                                                <Setter Property="Visibility" Value="Collapsed"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </TextBlock.Style>
                            </TextBlock>
                        </StackPanel>
                    </StackPanel>
                    
                    <!-- Actions -->
                    <StackPanel Grid.Column="2" 
                                Orientation="Horizontal"
                                VerticalAlignment="Top">
                        <!-- Note Link Indicator -->
                        <TextBlock Text="{Binding SourceIndicator}"
                                   FontSize="14"
                                   ToolTip="{Binding SourceTooltip}"
                                   Margin="0,0,4,0"
                                   VerticalAlignment="Center">
                            <TextBlock.Style>
                                <Style TargetType="TextBlock">
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding IsNoteLinked}" Value="False">
                                            <Setter Property="Visibility" Value="Collapsed"/>
                                        </DataTrigger>
                                        <DataTrigger Binding="{Binding ShowOrphanedIndicator}" Value="True">
                                            <Setter Property="Foreground" Value="{DynamicResource SystemControlErrorTextForegroundBrush}"/>
                                            <Setter Property="ToolTip" Value="⚠️ Source note was modified or deleted"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </TextBlock.Style>
                        </TextBlock>
                        
                        <!-- Favorite -->
                        <Button Width="24" Height="24"
                                Background="Transparent"
                                BorderThickness="0"
                                Command="{Binding ToggleFavoriteCommand}"
                                ToolTip="Toggle Favorite"
                                Cursor="Hand">
                            <ContentControl Template="{StaticResource LucideStar}"
                                            Width="14" Height="14">
                                <ContentControl.Style>
                                    <Style TargetType="ContentControl">
                                        <Setter Property="Foreground" Value="{DynamicResource SystemControlForegroundBaseMediumBrush}"/>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding IsFavorite}" Value="True">
                                                <Setter Property="Foreground" Value="#FFD700"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </ContentControl.Style>
                            </ContentControl>
                        </Button>
                    </StackPanel>
                </Grid>
            </Border>
            
            <DataTemplate.Triggers>
                <Trigger SourceName="TodoItemBorder" Property="IsMouseOver" Value="True">
                    <Setter TargetName="TodoItemBorder" Property="Background" 
                            Value="{DynamicResource SystemControlBackgroundListLowBrush}"/>
                </Trigger>
            </DataTemplate.Triggers>
        </DataTemplate>
    </UserControl.Resources>
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/> <!-- Quick Add -->
            <RowDefinition Height="200"/> <!-- Navigation: Smart Lists + Categories -->
            <RowDefinition Height="Auto"/> <!-- Filter -->
            <RowDefinition Height="*"/> <!-- Todo List -->
        </Grid.RowDefinitions>
        
        <!-- Quick Add Bar -->
        <Border Grid.Row="0" 
                Background="{DynamicResource SystemControlBackgroundChromeMediumBrush}"
                Padding="12,8">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <TextBox x:Name="QuickAddTextBox"
                         Grid.Column="0"
                         Text="{Binding TodoList.QuickAddText, UpdateSourceTrigger=PropertyChanged}"
                         KeyDown="QuickAddTextBox_KeyDown"/>
                
                <Button Grid.Column="1"
                        Margin="8,0,0,0"
                        Command="{Binding TodoList.QuickAddCommand}"
                        IsDefault="True"
                        Content="Add"/>
            </Grid>
        </Border>
        
        <!-- Navigation Panel: Smart Lists + Categories -->
        <Border Grid.Row="1"
                Background="{DynamicResource SystemControlBackgroundAltHighBrush}"
                BorderBrush="{DynamicResource SystemControlBackgroundBaseLowBrush}"
                BorderThickness="0,0,0,1">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="120"/> <!-- Smart Lists Section - FIXED HEIGHT -->
                    <RowDefinition Height="80"/> <!-- Categories Section - GUARANTEED SPACE -->
                </Grid.RowDefinitions>
                
                <!-- Smart Lists Section -->
                <StackPanel Grid.Row="0">
                    <TextBlock Text="SMART LISTS" 
                               FontSize="11" 
                               FontWeight="SemiBold"
                               Foreground="{DynamicResource SystemControlForegroundBaseMediumBrush}"
                               Margin="12,8,12,4"/>
                    <ItemsControl ItemsSource="{Binding CategoryTree.SmartLists}"
                                  Margin="0,0,0,8">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border Background="Transparent"
                                        Cursor="Hand"
                                        Padding="12,4">
                                    <Border.InputBindings>
                                        <MouseBinding MouseAction="LeftClick"
                                                      Command="{Binding SelectCommand}"/>
                                    </Border.InputBindings>
                                    <Border.Style>
                                        <Style TargetType="Border">
                                            <Setter Property="Background" Value="Transparent"/>
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding IsSelected}" Value="True">
                                                    <Setter Property="Background" 
                                                            Value="{DynamicResource SystemControlHighlightListLowBrush}"/>
                                                </DataTrigger>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter Property="Background" 
                                                            Value="{DynamicResource SystemControlBackgroundListLowBrush}"/>
                                                </Trigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Border.Style>
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="{Binding IconGlyph}"
                                                   FontFamily="Segoe MDL2 Assets"
                                                   FontSize="14"
                                                   Margin="0,0,8,0"
                                                   VerticalAlignment="Center"/>
                                        <TextBlock Text="{Binding Name}"
                                                   VerticalAlignment="Center"/>
                                    </StackPanel>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </StackPanel>
                
                <!-- Categories Section -->
                <StackPanel Grid.Row="1">
                    <TextBlock Text="CATEGORIES" 
                               FontSize="11" 
                               FontWeight="SemiBold"
                               Foreground="{DynamicResource SystemControlForegroundBaseMediumBrush}"
                               Margin="12,4,12,4"/>
                    
                    <!-- SIMPLE LISTBOX - Guaranteed visible with fixed dimensions -->
                    <ListBox ItemsSource="{Binding CategoryTree.Categories}"
                             SelectionMode="Single"
                             Background="White"
                             BorderBrush="Gray"
                             BorderThickness="2"
                             Margin="12,0,12,4"
                             Height="60"
                             Padding="4">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal" Margin="4,2" Cursor="Hand">
                                    <TextBlock Text="📁 " FontSize="14" Margin="0,0,4,0"/>
                                    <TextBlock Text="{Binding DisplayPath}" FontSize="12" FontWeight="Bold"/>
                                </StackPanel>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                    
                    <!-- Empty state message -->
                    <TextBlock Text="Right-click folders in note tree to add categories"
                               FontSize="11"
                               FontStyle="Italic"
                               Foreground="{DynamicResource SystemControlForegroundBaseMediumBrush}"
                               Margin="12,4"
                               TextWrapping="Wrap">
                        <TextBlock.Style>
                            <Style TargetType="TextBlock">
                                <Setter Property="Visibility" Value="Collapsed"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding CategoryTree.Categories.Count}" Value="0">
                                        <Setter Property="Visibility" Value="Visible"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </TextBlock.Style>
                    </TextBlock>
                </StackPanel>
            </Grid>
        </Border>
        
        <!-- Filter Bar -->
        <Border Grid.Row="2"
                Background="{DynamicResource SystemControlBackgroundAltHighBrush}"
                Padding="12,4">
            <TextBox Text="{Binding TodoList.FilterText, UpdateSourceTrigger=PropertyChanged, Delay=300}">
                <TextBox.InputBindings>
                    <KeyBinding Key="Escape" Command="{Binding TodoList.ClearFilterCommand}"/>
                </TextBox.InputBindings>
            </TextBox>
        </Border>
        
        <!-- Todo List -->
        <ScrollViewer Grid.Row="3"
                      VerticalScrollBarVisibility="Auto"
                      HorizontalScrollBarVisibility="Disabled">
            <ItemsControl ItemsSource="{Binding TodoList.Todos}"
                          ItemTemplate="{StaticResource TodoItemTemplate}">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <VirtualizingStackPanel />
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
            </ItemsControl>
        </ScrollViewer>
        
        <!-- Loading Overlay -->
        <Border Grid.Row="3"
                Background="{DynamicResource SystemControlBackgroundAltHighBrush}"
                Opacity="0.8"
                Visibility="{Binding TodoList.IsLoading, Converter={StaticResource BooleanToVisibilityConverter}}">
            <TextBlock Text="Loading..."
                       FontSize="16"
                       Foreground="{DynamicResource SystemControlForegroundBaseMediumBrush}"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"/>
        </Border>
    </Grid>
</UserControl>
