<UserControl x:Class="NoteNest.UI.Plugins.TodoPlugin.UI.Views.TodoPanelView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:NoteNest.UI.Plugins.TodoPlugin.UI.Views"
             xmlns:vm="clr-namespace:NoteNest.UI.Plugins.TodoPlugin.UI.ViewModels"
             xmlns:converters="clr-namespace:NoteNest.UI.Plugins.TodoPlugin.UI.Converters"
             xmlns:ui="http://schemas.modernwpf.com/2019"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="350">
    
    <UserControl.Resources>
        <!-- Converters -->
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
        <converters:InverseBooleanToVisibilityConverter x:Key="InverseBooleanToVisibilityConverter"/>
        <converters:BoolToStrikethroughConverter x:Key="BoolToStrikethroughConverter"/>
        <converters:BoolToErrorBrushConverter x:Key="BoolToErrorBrushConverter"/>
        <!-- Todo Item Template -->
        <DataTemplate x:Key="TodoItemTemplate" DataType="{x:Type vm:TodoItemViewModel}">
            <Border x:Name="TodoItemBorder"
                    Visibility="{Binding IsVisible, Converter={StaticResource BooleanToVisibilityConverter}}"
                    Background="Transparent"
                    BorderBrush="{DynamicResource SystemControlBackgroundBaseLowBrush}"
                    BorderThickness="0,0,0,1"
                    Padding="12,8">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    
                    <!-- Checkbox -->
                    <CheckBox Grid.Column="0"
                              IsChecked="{Binding IsCompleted}"
                              VerticalAlignment="Top"
                              Margin="0,2,8,0"/>
                    
                    <!-- Content -->
                    <StackPanel Grid.Column="1" VerticalAlignment="Center">
                        <!-- Editable Text -->
                        <Grid>
                            <TextBlock x:Name="TodoText"
                                       Text="{Binding Text}"
                                       TextWrapping="Wrap"
                                       TextDecorations="{Binding IsCompleted, Converter={StaticResource BoolToStrikethroughConverter}}"
                                       Visibility="{Binding IsEditing, Converter={StaticResource InverseBooleanToVisibilityConverter}}"/>
                            
                            <TextBox x:Name="EditTextBox"
                                     Text="{Binding EditingText, UpdateSourceTrigger=PropertyChanged}"
                                     TextWrapping="Wrap"
                                     Visibility="{Binding IsEditing, Converter={StaticResource BooleanToVisibilityConverter}}"
                                     KeyDown="EditTextBox_KeyDown"
                                     LostFocus="EditTextBox_LostFocus"/>
                        </Grid>
                        
                        <!-- Metadata -->
                        <StackPanel Orientation="Horizontal" Margin="0,2,0,0">
                            <!-- Due Date -->
                            <TextBlock Text="{Binding DueDateDisplay}"
                                       FontSize="11"
                                       Foreground="{Binding IsOverdue, Converter={StaticResource BoolToErrorBrushConverter}}"
                                       Margin="0,0,8,0">
                                <TextBlock.Style>
                                    <Style TargetType="TextBlock">
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding DueDateDisplay}" Value="">
                                                <Setter Property="Visibility" Value="Collapsed"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </TextBlock.Style>
                            </TextBlock>
                            
                            <!-- Tags -->
                            <TextBlock Text="{Binding TagsDisplay}"
                                       FontSize="11"
                                       Foreground="{DynamicResource SystemControlForegroundBaseMediumBrush}"
                                       FontStyle="Italic">
                                <TextBlock.Style>
                                    <Style TargetType="TextBlock">
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding TagsDisplay}" Value="">
                                                <Setter Property="Visibility" Value="Collapsed"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </TextBlock.Style>
                            </TextBlock>
                        </StackPanel>
                    </StackPanel>
                    
                    <!-- Actions -->
                    <StackPanel Grid.Column="2" 
                                Orientation="Horizontal"
                                VerticalAlignment="Top">
                        <!-- Note Link Indicator -->
                        <TextBlock Text="{Binding SourceIndicator}"
                                   FontSize="14"
                                   ToolTip="{Binding SourceTooltip}"
                                   Margin="0,0,4,0"
                                   VerticalAlignment="Center">
                            <TextBlock.Style>
                                <Style TargetType="TextBlock">
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding IsNoteLinked}" Value="False">
                                            <Setter Property="Visibility" Value="Collapsed"/>
                                        </DataTrigger>
                                        <DataTrigger Binding="{Binding ShowOrphanedIndicator}" Value="True">
                                            <Setter Property="Foreground" Value="{DynamicResource SystemControlErrorTextForegroundBrush}"/>
                                            <Setter Property="ToolTip" Value="⚠️ Source note was modified or deleted"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </TextBlock.Style>
                        </TextBlock>
                        
                        <!-- Favorite -->
                        <Button Width="24" Height="24"
                                Background="Transparent"
                                BorderThickness="0"
                                Command="{Binding ToggleFavoriteCommand}"
                                ToolTip="Toggle Favorite"
                                Cursor="Hand">
                            <ContentControl Template="{StaticResource LucideStar}"
                                            Width="14" Height="14">
                                <ContentControl.Style>
                                    <Style TargetType="ContentControl">
                                        <Setter Property="Foreground" Value="{DynamicResource SystemControlForegroundBaseMediumBrush}"/>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding IsFavorite}" Value="True">
                                                <Setter Property="Foreground" Value="#FFD700"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </ContentControl.Style>
                            </ContentControl>
                        </Button>
                    </StackPanel>
                </Grid>
            </Border>
            
            <DataTemplate.Triggers>
                <Trigger SourceName="TodoItemBorder" Property="IsMouseOver" Value="True">
                    <Setter TargetName="TodoItemBorder" Property="Background" 
                            Value="{DynamicResource SystemControlBackgroundListLowBrush}"/>
                </Trigger>
            </DataTemplate.Triggers>
        </DataTemplate>
    </UserControl.Resources>
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/> <!-- Quick Add -->
            <RowDefinition Height="Auto"/> <!-- Categories -->
            <RowDefinition Height="*"/> <!-- Todo List -->
        </Grid.RowDefinitions>
        
        <!-- Quick Add Bar -->
        <Border Grid.Row="0" 
                Background="{DynamicResource SystemControlBackgroundChromeMediumBrush}"
                Padding="12,8">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <TextBox x:Name="QuickAddTextBox"
                         Grid.Column="0"
                         Text="{Binding TodoList.QuickAddText, UpdateSourceTrigger=PropertyChanged}"
                         KeyDown="QuickAddTextBox_KeyDown"/>
                
                <Button Grid.Column="1"
                        Margin="8,0,0,0"
                        Command="{Binding TodoList.QuickAddCommand}"
                        IsDefault="True"
                        Content="Add"/>
            </Grid>
        </Border>
        
        <!-- Categories Section - SIMPLE AND CLEAN -->
        <Border Grid.Row="1"
                Background="{DynamicResource SystemControlBackgroundAltHighBrush}"
                BorderBrush="{DynamicResource SystemControlBackgroundBaseLowBrush}"
                BorderThickness="0,0,0,1"
                Padding="12,8">
            <StackPanel>
                <TextBlock Text="CATEGORIES" 
                           FontSize="11" 
                           FontWeight="SemiBold"
                           Foreground="{DynamicResource SystemControlForegroundBaseMediumBrush}"
                           Margin="0,0,0,4"/>
                
                <!-- UNIFIED TREEVIEW - Categories contain Todos -->
                <TreeView ItemsSource="{Binding CategoryTree.Categories}"
                          Background="Transparent"
                          BorderThickness="0"
                          MinHeight="100"
                          MaxHeight="200"
                          Padding="0"
                          x:Name="CategoryTreeView"
                          KeyDown="CategoryTreeView_KeyDown">
                    <TreeView.Resources>
                        <!-- Category template - displays folder with child categories and todos -->
                        <HierarchicalDataTemplate DataType="{x:Type vm:CategoryNodeViewModel}"
                                                  ItemsSource="{Binding AllItems}">
                            <StackPanel Orientation="Horizontal" Margin="2">
                                <TextBlock Text="📁" FontSize="12" Margin="0,0,4,0" Foreground="#FFA500"/>
                                <TextBlock Text="{Binding Name}" FontSize="11" FontWeight="Medium"/>
                                <TextBlock Text="{Binding Todos.Count, StringFormat=' ({0})'}" 
                                           FontSize="10" 
                                           Foreground="Gray" 
                                           Margin="4,0,0,0"/>
                            </StackPanel>
                        </HierarchicalDataTemplate>
                        
                        <!-- Todo template - displays todo item with checkbox -->
                        <DataTemplate DataType="{x:Type vm:TodoItemViewModel}">
                            <Border Padding="4,2" Background="Transparent" Cursor="Hand">
                                <StackPanel Orientation="Horizontal">
                                    <CheckBox IsChecked="{Binding IsCompleted}" 
                                              Margin="0,0,8,0"
                                              VerticalAlignment="Center"
                                              Command="{Binding ToggleCompletionCommand}"/>
                                    <TextBlock Text="{Binding Text}" 
                                               FontSize="11"
                                               VerticalAlignment="Center"/>
                                    <TextBlock Text="⭐" 
                                               FontSize="10" 
                                               Margin="8,0,0,0"
                                               Visibility="{Binding IsFavorite, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                                </StackPanel>
                            </Border>
                        </DataTemplate>
                    </TreeView.Resources>
                    
                    <TreeView.ItemContainerStyle>
                        <Style TargetType="TreeViewItem">
                            <Setter Property="IsExpanded" Value="{Binding IsExpanded, Mode=TwoWay}"/>
                            <Setter Property="Padding" Value="2,1"/>
                        </Style>
                    </TreeView.ItemContainerStyle>
                </TreeView>
                
                <!-- Empty state message -->
                <TextBlock Text="Right-click folders in note tree to add categories"
                           FontSize="10"
                           FontStyle="Italic"
                           Foreground="{DynamicResource SystemControlForegroundBaseMediumBrush}"
                           Margin="0,8,0,0"
                           TextWrapping="Wrap">
                    <TextBlock.Style>
                        <Style TargetType="TextBlock">
                            <Setter Property="Visibility" Value="Collapsed"/>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding CategoryTree.Categories.Count}" Value="0">
                                    <Setter Property="Visibility" Value="Visible"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </TextBlock.Style>
                </TextBlock>
            </StackPanel>
        </Border>
        
        <!-- Removed: Todos now live inside categories in the tree above -->
    </Grid>
</UserControl>
