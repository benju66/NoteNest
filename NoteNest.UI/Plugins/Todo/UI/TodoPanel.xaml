<UserControl x:Class="NoteNest.UI.Plugins.Todo.UI.TodoPanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:conv="clr-namespace:NoteNest.UI.Plugins.Todo.UI.Converters"
             xmlns:local="clr-namespace:NoteNest.UI.Plugins.Todo.UI"
             mc:Ignorable="d"
             d:DesignHeight="600" d:DesignWidth="350">

    <UserControl.Resources>
        <conv:BoolToStrikethroughConverter x:Key="BoolToStrikethroughConverter"/>
        <conv:PriorityToBrushConverter x:Key="PriorityToBrushConverter"/>
        <conv:NullToCollapsedConverter x:Key="NullToCollapsedConverter"/>
        <BooleanToVisibilityConverter x:Key="BoolToVis"/>

        <DataTemplate x:Key="TaskItemTemplate">
            <Border Background="Transparent"
                    BorderThickness="0,0,0,1"
                    BorderBrush="{DynamicResource SystemControlForegroundBaseLowBrush}"
                    Padding="8,4"
                    AllowDrop="True"
                    Drop="TaskItem_Drop"
                    DragOver="TaskItem_DragOver"
                    PreviewMouseLeftButtonDown="TaskItem_PreviewMouseLeftButtonDown"
                    PreviewMouseMove="TaskItem_PreviewMouseMove">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <!-- Checkbox -->
                    <CheckBox Grid.Column="0"
                              IsChecked="{Binding IsCompleted}"
                              VerticalAlignment="Center"
                              Margin="0,0,8,0"
                              Checked="TaskCheckBox_Checked"
                              Unchecked="TaskCheckBox_Unchecked"/>

                    <!-- Content -->
                    <StackPanel Grid.Column="1">
                        <StackPanel Orientation="Horizontal">
                            <Rectangle Width="3" Height="14" Margin="0,2,6,0"
                                       Fill="{Binding Priority, Converter={StaticResource PriorityToBrushConverter}}"/>
                            <TextBlock Text="{Binding Text}"
                                       TextWrapping="Wrap"
                                       TextDecorations="{Binding IsCompleted, Converter={StaticResource BoolToStrikethroughConverter}}"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="0,2,0,0" Visibility="{Binding DueDate, Converter={StaticResource NullToCollapsedConverter}}">
                            <TextBlock FontSize="11" Foreground="{DynamicResource SystemControlForegroundBaseMediumBrush}">
                                <TextBlock.Text>
                                    <MultiBinding StringFormat="{}{0:MMM d}">
                                        <Binding Path="DueDate"/>
                                    </MultiBinding>
                                </TextBlock.Text>
                            </TextBlock>
                            <TextBlock Text="  âš " Foreground="Red" FontSize="11" Visibility="{Binding IsOverdue, Converter={StaticResource NullToCollapsedConverter}}"/>
                        </StackPanel>
                    </StackPanel>

                    <!-- Open linked note (visible if linked) -->
                    <Button Grid.Column="2" Content="ðŸ”—" Background="Transparent" BorderThickness="0" Padding="4,0"
                            Visibility="{Binding IsLinkedToNote, Converter={StaticResource BoolToVis}}"
                            ToolTip="Open linked note" Click="OpenLinkedNote_Click"/>

                    <!-- Actions -->
                    <Button Grid.Column="3" Content="â‹¯" FontSize="16" Background="Transparent" BorderThickness="0" Padding="4,0" Click="TaskMenu_Click">
                        <Button.ContextMenu>
                            <ContextMenu>
                                <MenuItem Header="Edit" Click="EditTask_Click"/>
                                <MenuItem Header="Set Due Date" Click="SetDueDate_Click"/>
                                <MenuItem Header="Set Priority" Click="SetPriority_Click"/>
                                <Separator/>
                                <MenuItem Header="Delete" Click="DeleteTask_Click"/>
                            </ContextMenu>
                        </Button.ContextMenu>
                    </Button>
                </Grid>
            </Border>
        </DataTemplate>
    </UserControl.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header with View Toggle -->
        <Border Grid.Row="0"
                Background="{DynamicResource SystemControlBackgroundChromeMediumBrush}"
                Padding="8">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <ComboBox Grid.Column="0"
                          x:Name="ViewSelector"
                          SelectedIndex="0"
                          SelectionChanged="ViewSelector_SelectionChanged">
                    <ComboBoxItem Content="All Tasks"/>
                    <ComboBoxItem Content="Today"/>
                    <ComboBoxItem Content="Upcoming"/>
                    <ComboBoxItem Content="Completed"/>
                </ComboBox>

                <StackPanel Grid.Column="1" Orientation="Vertical" Margin="8,0,0,0">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="{Binding ActiveTaskCount}" FontWeight="Bold" Margin="0,0,4,0"/>
                        <TextBlock Text="active" Foreground="{DynamicResource SystemControlForegroundBaseMediumBrush}"/>
                    </StackPanel>
                    <CheckBox Content="Show Completed" IsChecked="{Binding ShowCompleted, Mode=TwoWay}"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Quick Add Bar -->
        <Grid Grid.Row="1"
              Background="{DynamicResource SystemControlBackgroundListLowBrush}">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <TextBox x:Name="QuickAddTextBox"
                     Grid.Column="0"
                     Margin="8"
                     KeyDown="QuickAdd_KeyDown">
                <TextBox.Style>
                    <Style TargetType="TextBox">
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="TextBox">
                                    <Grid>
                                        <TextBlock Text="Add a task..." Opacity="0.5" VerticalAlignment="Center" Margin="4,0,0,0" IsHitTestVisible="False">
                                            <TextBlock.Style>
                                                <Style TargetType="TextBlock">
                                                    <Setter Property="Visibility" Value="Collapsed"/>
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding Text.Length, RelativeSource={RelativeSource TemplatedParent}}" Value="0">
                                                            <Setter Property="Visibility" Value="Visible"/>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </TextBlock.Style>
                                        </TextBlock>
                                        <ScrollViewer x:Name="PART_ContentHost" Focusable="false" HorizontalScrollBarVisibility="Hidden" VerticalScrollBarVisibility="Hidden"/>
                                    </Grid>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </TextBox.Style>
            </TextBox>

            <Button Grid.Column="1"
                    Content="+"
                    FontSize="18"
                    Margin="0,8,8,8"
                    Padding="8,0"
                    Click="AddButton_Click"/>
        </Grid>

        <!-- Category + Task List -->
        <ScrollViewer Grid.Row="2" VerticalScrollBarVisibility="Auto">
            <TreeView x:Name="TaskTreeView"
                      ItemsSource="{Binding TaskCategories}"
                      AllowDrop="True"
                      VirtualizingStackPanel.IsVirtualizing="True"
                      VirtualizingStackPanel.VirtualizationMode="Recycling"
                      ScrollViewer.CanContentScroll="True">
                <TreeView.ItemTemplate>
                    <HierarchicalDataTemplate ItemsSource="{Binding Tasks}">
                        <!-- Category Header -->
                        <DockPanel AllowDrop="True" DragOver="TaskItem_DragOver" Drop="TaskItem_Drop">
                            <TextBlock Text="{Binding Name}" FontWeight="SemiBold"/>
                            <TextBlock Text="  ("/>
                            <TextBlock Text="{Binding TaskCount}"/>
                            <TextBlock Text=")"/>
                        </DockPanel>
                        <HierarchicalDataTemplate.ItemTemplate>
                            <DataTemplate>
                                <ContentPresenter Content="{Binding}" ContentTemplate="{StaticResource TaskItemTemplate}"/>
                            </DataTemplate>
                        </HierarchicalDataTemplate.ItemTemplate>
                    </HierarchicalDataTemplate>
                </TreeView.ItemTemplate>
            </TreeView>
        </ScrollViewer>

        <!-- Footer -->
        <Border Grid.Row="3"
                Background="{DynamicResource SystemControlBackgroundChromeMediumBrush}"
                BorderBrush="{DynamicResource SystemControlForegroundBaseLowBrush}"
                BorderThickness="0,1,0,0"
                Padding="8">
            <StackPanel Orientation="Horizontal"
                        HorizontalAlignment="Center">
                <Button Content="Clear Completed"
                        Margin="4,0"
                        Click="ClearCompleted_Click"/>
                <Button Content="Diagnostics"
                        Margin="4,0"
                        Click="OpenDiagnostics_Click"/>
            </StackPanel>
        </Border>
    </Grid>
</UserControl>


