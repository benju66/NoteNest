<ui:ContentDialog x:Class="NoteNest.UI.Plugins.Todo.UI.TaskEditDialog"
                  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                  xmlns:ui="http://schemas.modernwpf.com/2019"
                  Title="Edit Task"
                  PrimaryButtonText="Save"
                  CloseButtonText="Cancel"
                  DefaultButton="Primary">

    <Grid Width="380">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBox Grid.Row="0" x:Name="TaskTextBox" ui:ControlHelper.Header="Task" Text="{Binding Text}" Margin="0,0,0,12"/>

        <ComboBox Grid.Row="1" x:Name="CategoryComboBox" ui:ControlHelper.Header="Category" ItemsSource="{Binding Categories}" SelectedItem="{Binding Category}" Margin="0,0,0,12"/>

        <ComboBox Grid.Row="2" x:Name="PriorityComboBox" ui:ControlHelper.Header="Priority" SelectedItem="{Binding Priority}" Margin="0,0,0,12">
            <ComboBoxItem Content="Low"/>
            <ComboBoxItem Content="Normal"/>
            <ComboBoxItem Content="High"/>
            <ComboBoxItem Content="Urgent"/>
        </ComboBox>

        <DatePicker Grid.Row="3" x:Name="DueDatePicker" SelectedDate="{Binding DueDate}" Margin="0,0,0,12"/>

        <TextBox Grid.Row="4" x:Name="NotesTextBox" ui:ControlHelper.Header="Notes" Text="{Binding Notes}" AcceptsReturn="True" Height="60" TextWrapping="Wrap"/>
    </Grid>
</ui:ContentDialog>


