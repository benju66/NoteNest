<Window x:Class="NoteNest.UI.Windows.IntegrityDiagnosticsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Integrity Diagnostics" Height="420" Width="600">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <TextBlock Text="Detected issues" Margin="10" FontWeight="Bold"/>
        <ListView x:Name="IssuesList" Grid.Row="1" Margin="10">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Type" Width="140" DisplayMemberBinding="{Binding Type}"/>
                    <GridViewColumn Header="Description" Width="360" DisplayMemberBinding="{Binding Description}"/>
                    <GridViewColumn Header="Actions" Width="170">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal">
                                    <Button Content="Relink" Margin="0,0,4,0" Click="Relink_Click"/>
                                    <Button Content="Clear" Margin="0,0,4,0" Click="Clear_Click"/>
                                    <Button Content="Ignore" Click="Ignore_Click"/>
                                </StackPanel>
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>
                </GridView>
            </ListView.View>
        </ListView>
    </Grid>
</Window>


