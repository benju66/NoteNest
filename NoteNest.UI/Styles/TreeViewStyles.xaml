<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:vm="clr-namespace:NoteNest.UI.ViewModels"
                    xmlns:converters="clr-namespace:NoteNest.UI.Converters">

    <converters:FolderStateToIconConverter x:Key="FolderStateToIcon"/>
    <converters:NoteFormatToIconConverter x:Key="NoteFormatToIcon"/>
    <converters:NoteFormatToBrushConverter x:Key="NoteFormatToBrush"/>
    <converters:CountToVisibilityConverter x:Key="CountToVisibility"/>
    <BooleanToVisibilityConverter x:Key="BoolToVisibility"/>

    <Style x:Key="IconStyle" TargetType="TextBlock">
        <Setter Property="FontFamily" Value="Segoe MDL2 Assets"/>
        <Setter Property="FontSize" Value="16"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
        <Setter Property="Margin" Value="0,0,8,0"/>
    </Style>

    <HierarchicalDataTemplate DataType="{x:Type vm:CategoryTreeItem}" ItemsSource="{Binding Children}">
        <StackPanel Orientation="Horizontal">
            <TextBlock>
                <TextBlock.Style>
                    <Style TargetType="TextBlock" BasedOn="{StaticResource IconStyle}">
                        <Setter Property="Text">
                            <Setter.Value>
                                <MultiBinding Converter="{StaticResource FolderStateToIcon}">
                                    <Binding Path="IsExpanded"/>
                                    <Binding Path="Pinned"/>
                                </MultiBinding>
                            </Setter.Value>
                        </Setter>
                        <Setter Property="Foreground" Value="{StaticResource FolderIconBrush}"/>
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding IsExpanded}" Value="True">
                                <Setter Property="Foreground" Value="{StaticResource FolderOpenIconBrush}"/>
                            </DataTrigger>
                            <DataTrigger Binding="{Binding Pinned}" Value="True">
                                <Setter Property="Foreground" Value="{StaticResource FolderPinnedIconBrush}"/>
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </TextBlock.Style>
            </TextBlock>
            <TextBlock Text="{Binding Name}" VerticalAlignment="Center" 
                       Foreground="{DynamicResource SystemControlForegroundBaseHighBrush}"/>
            <Border Background="{DynamicResource SystemControlBackgroundBaseLowBrush}" CornerRadius="6" Padding="4,1" Margin="6,0,0,0" Visibility="{Binding Notes.Count, Converter={StaticResource CountToVisibility}}">
                <TextBlock Text="{Binding Notes.Count}" FontSize="10" 
                          Foreground="{DynamicResource SystemControlForegroundBaseHighBrush}" Opacity="0.8"/>
            </Border>
        </StackPanel>
    </HierarchicalDataTemplate>

    <DataTemplate DataType="{x:Type vm:NoteTreeItem}">
        <StackPanel Orientation="Horizontal">
            <TextBlock Style="{StaticResource IconStyle}" FontSize="14"
                       Text="{Binding Model.Format, Converter={StaticResource NoteFormatToIcon}}"
                       Foreground="{StaticResource NoteIconBrush}"/>
            <TextBlock Text="{Binding Title}" VerticalAlignment="Center" 
                       Foreground="{DynamicResource SystemControlForegroundBaseHighBrush}"/>
        </StackPanel>
    </DataTemplate>

    <Style x:Key="ModernTreeViewItemStyle" TargetType="TreeViewItem">
        <Setter Property="IsExpanded" Value="{Binding IsExpanded, Mode=TwoWay}"/>
        <Setter Property="IsSelected" Value="{Binding IsSelected, Mode=TwoWay}"/>
        <Setter Property="Padding" Value="4,2"/>
        <Setter Property="Margin" Value="0,1"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="TreeViewItem">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition/>
                        </Grid.RowDefinitions>
                        <Border x:Name="Bd" 
                                Grid.Row="0"
                                Background="Transparent" 
                                BorderBrush="Transparent"
                                BorderThickness="0" 
                                Padding="{TemplateBinding Padding}"
                                CornerRadius="3"
                                Margin="1,0">
                            <ContentPresenter x:Name="PART_Header" ContentSource="Header" 
                                            HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                            VerticalAlignment="Center"/>
                        </Border>
                        <ItemsPresenter x:Name="ItemsHost" Grid.Row="1" Visibility="Collapsed" Margin="16,0,0,0"/>
                    </Grid>
                    <ControlTemplate.Triggers>
                        <!-- Expand/collapse -->
                        <Trigger Property="IsExpanded" Value="true">
                            <Setter TargetName="ItemsHost" Property="Visibility" Value="Visible"/>
                        </Trigger>
                        
                        <!-- Hover state (lightest highlight) -->
                        <Trigger Property="IsMouseOver" Value="true">
                            <Setter TargetName="Bd" Property="Background" Value="#10000000"/>
                        </Trigger>
                        
                        <!-- Inactive selection (medium gray highlight) - when TreeView loses focus -->
                        <MultiTrigger>
                            <MultiTrigger.Conditions>
                                <Condition Property="IsSelected" Value="true"/>
                                <Condition Property="IsSelectionActive" Value="false"/>
                            </MultiTrigger.Conditions>
                            <Setter TargetName="Bd" Property="Background" Value="#FFE6E6E6"/>
                            <Setter Property="Foreground" Value="#FF000000"/>
                        </MultiTrigger>
                        
                        <!-- Active selection (strong blue highlight) - when TreeView has focus -->
                        <MultiTrigger>
                            <MultiTrigger.Conditions>
                                <Condition Property="IsSelected" Value="true"/>
                                <Condition Property="IsSelectionActive" Value="true"/>
                            </MultiTrigger.Conditions>
                            <Setter TargetName="Bd" Property="Background" Value="#FF0078D4"/>
                            <Setter Property="Foreground" Value="#FFFFFFFF"/>
                        </MultiTrigger>
                        
                        <!-- Hover over selected item -->
                        <MultiTrigger>
                            <MultiTrigger.Conditions>
                                <Condition Property="IsSelected" Value="true"/>
                                <Condition Property="IsSelectionActive" Value="true"/>
                                <Condition Property="IsMouseOver" Value="true"/>
                            </MultiTrigger.Conditions>
                            <Setter TargetName="Bd" Property="Background" Value="#FF106EBE"/>
                            <Setter Property="Foreground" Value="#FFFFFFFF"/>
                        </MultiTrigger>
                        
                        <!-- Hover over inactive selected item -->
                        <MultiTrigger>
                            <MultiTrigger.Conditions>
                                <Condition Property="IsSelected" Value="true"/>
                                <Condition Property="IsSelectionActive" Value="false"/>
                                <Condition Property="IsMouseOver" Value="true"/>
                            </MultiTrigger.Conditions>
                            <Setter TargetName="Bd" Property="Background" Value="#FFDADADA"/>
                            <Setter Property="Foreground" Value="#FF000000"/>
                        </MultiTrigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

</ResourceDictionary>

