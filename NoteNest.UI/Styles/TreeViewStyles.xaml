<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:vm="clr-namespace:NoteNest.UI.ViewModels"
                    xmlns:models="clr-namespace:NoteNest.Core.Models;assembly=NoteNest.Core"
                    xmlns:converters="clr-namespace:NoteNest.UI.Converters">

    <!-- Converters -->
    <converters:FolderStateToIconConverter x:Key="FolderStateToIcon"/>
    <converters:NoteFormatToIconConverter x:Key="NoteFormatToIcon"/>
    <converters:NoteFormatToBrushConverter x:Key="NoteFormatToBrush"/>
    <converters:CountToVisibilityConverter x:Key="CountToVisibility"/>
    <BooleanToVisibilityConverter x:Key="BoolToVisibility"/>

    <!-- Icon TextBlock Base Style -->
    <Style x:Key="IconStyle" TargetType="TextBlock">
        <Setter Property="FontFamily" Value="Segoe MDL2 Assets"/>
        <Setter Property="FontSize" Value="16"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
        <Setter Property="Margin" Value="0,0,8,0"/>
    </Style>

    <!-- Category Template -->
    <HierarchicalDataTemplate x:Key="CategoryTemplate" 
                               DataType="{x:Type vm:CategoryTreeItem}"
                               ItemsSource="{Binding Children}">
        <StackPanel Orientation="Horizontal">
            <!-- Icon -->
            <TextBlock>
                <TextBlock.Text>
                    <MultiBinding Converter="{StaticResource FolderStateToIcon}">
                        <Binding Path="IsExpanded"/>
                        <Binding Path="Pinned"/>
                    </MultiBinding>
                </TextBlock.Text>
                <TextBlock.Style>
                    <Style TargetType="TextBlock" BasedOn="{StaticResource IconStyle}">
                        <Setter Property="Foreground" Value="{StaticResource FolderIconBrush}"/>
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding IsExpanded}" Value="True">
                                <Setter Property="Foreground" Value="{StaticResource FolderOpenIconBrush}"/>
                            </DataTrigger>
                            <DataTrigger Binding="{Binding Pinned}" Value="True">
                                <Setter Property="Foreground" Value="{StaticResource FolderPinnedIconBrush}"/>
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </TextBlock.Style>
            </TextBlock>
            
            <!-- Name -->
            <TextBlock Text="{Binding Name}" VerticalAlignment="Center"/>
            
            <!-- Count Badge -->
            <Border Background="#20000000" 
                    CornerRadius="6" 
                    Padding="4,1" 
                    Margin="6,0,0,0"
                    Visibility="{Binding Notes.Count, Converter={StaticResource CountToVisibility}}">
                <TextBlock Text="{Binding Notes.Count}" FontSize="10" Opacity="0.8"/>
            </Border>
        </StackPanel>
    </HierarchicalDataTemplate>

    <!-- Note Template -->
    <DataTemplate x:Key="NoteTemplate" DataType="{x:Type vm:NoteTreeItem}">
        <StackPanel Orientation="Horizontal">
            <!-- Icon -->
            <TextBlock Style="{StaticResource IconStyle}"
                       FontSize="14"
                       Text="{Binding Model.Format, Converter={StaticResource NoteFormatToIcon}}"
                       Foreground="{Binding Model.Format, Converter={StaticResource NoteFormatToBrush}}"/>
            
            <!-- Title -->
            <TextBlock Text="{Binding Title}" VerticalAlignment="Center">
                <TextBlock.Style>
                    <Style TargetType="TextBlock">
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding IsDirty}" Value="True">
                                <Setter Property="FontStyle" Value="Italic"/>
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </TextBlock.Style>
            </TextBlock>
            
            <!-- Unsaved Dot -->
            <Ellipse Width="6" Height="6" 
                     Fill="{StaticResource UnsavedIndicatorBrush}"
                     Margin="4,0,0,0"
                     Visibility="{Binding IsDirty, Converter={StaticResource BoolToVisibility}}"/>
        </StackPanel>
    </DataTemplate>

    <!-- TreeView Item Style -->
    <Style x:Key="ModernTreeViewItemStyle" TargetType="TreeViewItem">
        <Setter Property="IsExpanded" Value="{Binding IsExpanded, Mode=TwoWay}"/>
        <Setter Property="IsSelected" Value="{Binding IsSelected, Mode=TwoWay}"/>
        <Setter Property="Padding" Value="2"/>
        <Style.Triggers>
            <Trigger Property="IsSelected" Value="True">
                <Setter Property="Background" Value="{DynamicResource SystemAccentColorLight2}"/>
            </Trigger>
            <Trigger Property="IsMouseOver" Value="True">
                <Setter Property="Background" Value="{DynamicResource SystemAccentColorLight3}"/>
            </Trigger>
        </Style.Triggers>
    </Style>

</ResourceDictionary>


